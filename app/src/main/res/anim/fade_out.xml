<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially"
    >
    <set>
        <objectAnimator
            android:duration="3000"
            android:propertyName="fillAlpha"
            android:valueFrom="1"
            android:valueTo="1"
            android:valueType="floatType" />
    </set>

    <set>
        <objectAnimator
            android:duration="300"
            android:propertyName="fillAlpha"
            android:valueFrom="1"
            android:valueTo="0"
            android:valueType="floatType" />
        <objectAnimator
            android:duration="300"
            android:propertyName="strokeAlpha"
            android:valueFrom="1"
            android:valueTo="0"
            android:valueType="floatType" />
    </set>
    <set>
        <objectAnimator
            android:duration="30000"
            android:propertyName="fillAlpha"
            android:valueFrom="0"
            android:valueTo="1"
            android:valueType="floatType" />
        <objectAnimator
            android:duration="30000"
            android:propertyName="strokeAlpha"
            android:valueFrom="0"
            android:valueTo="1"
            android:valueType="floatType" />
    </set>

</set>